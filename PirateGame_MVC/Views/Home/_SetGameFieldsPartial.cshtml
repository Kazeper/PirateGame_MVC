@using PirateGame_MVC.Models;
@model Player

<div class="container">

	@{ 
		int index = 0;
		string imgPath;

		for (int i = 0; i < GameSettings.NumberOfRows; i++)
		{
			<div class="row">

				@for (int j = 0; j < GameSettings.NumberOfColumns; j++)
				{
					<div id="@i _@j" class="col-1 border border-warning text-center d-flex">
						<input asp-for="GameField[index]" type="hidden" />
						@{ 
							imgPath = @Model.GameField[index].ToString() + ".jpg";
						}
						<div id="@index" class="img-fluid">
					 		<img id="@i -@j" class="img-fluid" src="~/resources/@imgPath" alt="" draggable="true" ondragstart="drag(event)"  ondrop="drop(event)" ondragover="allowDrop(event)" />
							<input value="@Model.GameField[index]" type="hidden" />
						</div>
											
					</div>
					index++;
				}

			</div>
		}
	}

</div>

